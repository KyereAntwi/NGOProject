@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "AccountLayout";
}

<!-- /.login-logo -->
<div class="login-box">
    <div class="login-logo">
        <a asp-page="./home"><b>DEGCA</b></a>
    </div>

    <div class="login-box-body">
        <p class="login-box-msg">Sign in to start your session</p>

        <form asp-route-returnUrl="@Model.ReturnUrl" id="account" method="post">
            <div class="form-group has-feedback">
                <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
                <i class="fa fa-envelope" aria-hidden="true"></i>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password">
                <i class="fa fa-lock" aria-hidden="true"></i>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <input type="checkbox" asp-for="Input.RememberMe"> Remember Me
                        </label>
                    </div>
                </div>
                <!-- /.col -->
            </div>

            <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
        </form>

        <div class="social-auth-links text-center">
            
            <p>- OR -</p>
            <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                <i class="fa fa-google-plus"></i> Sign in using
                Google+
            </a>
        </div>
        <!-- /.social-auth-links -->

        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-center">Register as a new user</a>

    </div>
</div>
<!-- /.login-box-body -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
