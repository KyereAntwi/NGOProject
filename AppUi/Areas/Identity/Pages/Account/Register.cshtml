@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "AccountLayout";
}


<!-- /.login-logo -->
<div class="login-box">
    <div class="login-logo">
        <a asp-page="./home"><b>DEGCA</b></a>
    </div>

    <div class="login-box-body">
        <p class="login-box-msg">Register a new account</p>

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="form-group has-feedback">
                <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email" required>
                <i class="fa fas fa-envelope" aria-hidden="true"></i>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <input asp-for="Input.PhoneNumber" type="tel" class="form-control" placeholder="Phone Number" required>
                <i class="fa fas fa-phone" aria-hidden="true"></i>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <input asp-for="Input.Password" type="password" min="8" class="form-control" placeholder="Password" required>
                <i class="fa fas fa-lock" aria-hidden="true"></i>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" required>
                <i class="fa fas fa-lock" aria-hidden="true"></i>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
        </form>
        <!-- /.social-auth-links -->
        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-center">Already with an account, Login</a>

    </div>
</div>
<!-- /.login-box-body -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
