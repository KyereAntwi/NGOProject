@page
@model AppUi.Pages.BlogModel

@{
    ViewData["Title"] = "Blog Details";
    Layout = "_Layout";
}

<div style="width:100%; height:400px; background-image:url('@Url.Page("/BlogImage", new { Id = Model.ViewModel.Id })'); background-size:cover; background-repeat:no-repeat;">
    <div class="container">
        <div class="row">
            <div class="col">
                
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col" style="font-family:'Comic Sans MS';">
            <h3 style="text-align:center" class="mb-2">@Model.ViewModel.Title</h3>
            <h3>Introduction</h3>
            <p>@Model.ViewModel.Introduction</p>
        </div>
    </div>

    @foreach (var item in Model.ViewModel.Subs)
    {
        <div class="row mt-3">
            <h3>@item.Subtitle</h3>
            <p>@item.Details</p>
        </div>
    }
</div>
