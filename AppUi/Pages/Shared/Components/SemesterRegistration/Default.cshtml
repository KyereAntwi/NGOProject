@model SemesterRegistrationViewModel

@if (Model.Semesters.Count > 0)
{
    <form asp-page="/Admin/Children/SemesterRegistration" method="post" role="form">
        <div class="form-group">
            <input asp-for="ChildId" class="form-control" readonly/>
        </div>

        <div class="form-group">
            <label asp-for="SemesterId"></label>
            <select asp-for="SemesterId" class="form-control">
                @foreach (var item in Model.Semesters) 
                {
                    <option value="@item.Id">@item.Title.ToUpper() | @item.AcademicYear.Year</option>
                }
            </select>
        </div>

        <button class="btn btn-sm btn-info" type="submit">Submit Registration</button>
    </form>
}
else 
{
    <div class="row">
        <div class="col-12">
            <h4>There are no semesters to select from</h4>
        </div>
    </div>
}