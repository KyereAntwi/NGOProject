@page
@model AppUi.Pages.Admin.PrayingListModel
@{
    ViewData["Title"] = "Praying List";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

@if (Model.List.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <tbody>
                @foreach (var item in Model.List) 
                {
                    <tr>
                        <td><img src="@Url.Page("/UserImage", new { item.ApplicationUserId })" class="rounded-circle" width="40" height="40"/></td>
                        <td>@item.ApplicationUser.Name</td>
                        <td>@item.DateAdded.ToLongDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else 
{
    <div class="row">
        <div class="col" style="text-align:center">
            <i class="fa fas fa-hand-peace" style="font-size:200px"></i>
            <h4>There are no subscribers at the moment!</h4>
        </div>
    </div>
}

