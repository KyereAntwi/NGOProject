@page
@model AppUi.Pages.Admin.Children.AllModel
@{
    Layout = "_AdminLayout";
}

@if (Model.ViewModel.Children.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Photograph</th>
                    <th>Full name</th>
                    <th>Gender</th>
                    <th>Date of Birth</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var child in Model.ViewModel.Children) 
                {
                    <tr>
                        <td>
                            @if (child.Phtotograph == null)
                            {
                                <img src="~/images/21104.png" class="rounded-circle" width="40" height="40"/>
                            }
                            else 
                            {
                                <img class="rounded-circle" width="40" height="40" src="@Url.Page("/ChildImage", new { Id = child.Id })"/>
                            }
                        </td>
                        <td>
                            @child.Fullname
                        </td>
                        <td>@child.Gender</td>
                        <td>@child.DateOfBirth.ToLongDateString()</td>
                        <td>
                            <a href="@Url.Page("/Admin/Children/Details", new { Id = child.Id })">
                                <i class="fa fas fa-door-open" title="View child details page"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else 
{
    <div class="row">
        <div class="col-12" style="text-align: center">
            <i class="fa fas fa-user" style="font-size: 100px"></i>
            <p>There are no added children</p>
        </div>
    </div>
}
