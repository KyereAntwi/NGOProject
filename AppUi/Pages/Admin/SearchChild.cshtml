@page
@model AppUi.Pages.Admin.SearchChildModel
@{
    ViewData["Title"] = "Search Children Result";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

@if (Model.SearchModel.Children.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <td></td>
                    <td>Full name</td>
                    <td>Gender</td>
                    <td>Date of Birth</td>
                    <td></td>
                </tr>
            </thead>

            <tbody>
                @foreach (var child in Model.SearchModel.Children)
                {
                    <tr>
                        <td>
                            @if (child.Phtotograph == null)
                            {
                                <img class="rounded" src="~/images/21104.png" width="30" height="30">
                            }
                            else
                            {
                                <img class="rounded" src="@Url.Action("GetChildProfileImage", "Utility", new { Id = child.Id })" width="30" height="30">
                            }
                        </td>
                        <td>@child.Fullname</td>
                        <td>@child.Gender</td>
                        <td>@child.DateOfBirth.ToLongDateString()</td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else 
{
    <div class="col-12" style="text-align: center">
        <i class="fa fas fa-shopping-basket" style="font-size: 200px"></i>
        <h5>This list is empty</h5>
    </div>
}

